lib = library(identifier: 'jenkins@main', retriever: modernSCM([
    $class: 'GitSCMSource',
    remote: 'https://github.com/opensearch-project/opensearch-build-libraries.git',
]))

standardReleasePipelineWithGenericTrigger(tokenIdCredential: 'opensearch-ci-webhook-token',
causeString: 'Successful release',
publishRelease: true)
{
    publishToNpm(repository: 'https://github.com/gaiksaya/opensearch-ci', tag: "$tag")
}